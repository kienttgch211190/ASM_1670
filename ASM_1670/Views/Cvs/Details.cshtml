<section class="section about-section gray-bg" id="about">
    <div class="container">
        <div class="row align-items-center flex-row-reverse">
            <div class="col-lg-6">
                <div class="about-text go-to">
                    <h3 class="dark-color"> @Html.DisplayFor(model => model.FullName)</h3>
                    <p>@Html.DisplayFor(model => model.Description)</p>
                    <div class="row about-list">
                        <div class="col-md-6">
                            <div class="media">
                                <label>Address</label>
                                <p>@Html.DisplayFor(model => model.Address)</p>
                            </div>
                            <div class="media">
                                <label>E-mail</label>
                                <p>@Html.DisplayFor(model => model.User.Email)</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            
                            <div class="media">
                                <label>Skill</label>
                                <p>@Html.DisplayFor(model => model.Skill)</p>
                            </div>
                            <div class="media">
                                <label>Experience</label>
                                <p>@Html.DisplayFor(model => model.Experience)</p>
                            </div>
                          
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="about-avatar">
                    <img src="@Html.DisplayFor(model => model.CvPicture)" width="300" height="300" title="" alt="">
                </div>
            </div>
        </div>
        <div class="counter mt-5">
            <div class="row">
                <div class="col-6 col-lg-3">
